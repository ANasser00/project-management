@startuml
left to right direction

title Freelancer / Consultant

' --- Left-side actor ---
actor "Freelancer" as Freelancer

rectangle "ALIGNIX – Freelancer / Consultant" as System {

  ' --- Main use cases ---
  usecase "Client projects" as UC_CLIENTS
  usecase "Personal tasks" as UC_PERSONAL
  usecase "Time prep" as UC_TIME
  usecase "Deliverables" as UC_DELIV

  ' --- Included details (around main use cases) ---

  ' Client projects
  usecase "Project\nper client" as UC_PROJ_PER_CLIENT
  usecase "See all\nclient work" as UC_CLIENT_OVERVIEW

  ' Personal tasks
  usecase "See by\npriority" as UC_VIEW_PRI
  usecase "Urgent →\nBacklog" as UC_PRI_FLOW

  ' Time prep
  usecase "Set\npoints" as UC_SET_POINTS
  usecase "Estimate\nwork" as UC_ESTIMATE

  ' Deliverables
  usecase "Change\nstatus" as UC_CHANGE_STATUS
  usecase "See\nactivity log" as UC_ACTIVITY
}

' --- include relations ---
UC_CLIENTS ..> UC_PROJ_PER_CLIENT : <<include>>
UC_CLIENTS ..> UC_CLIENT_OVERVIEW : <<include>>

UC_PERSONAL ..> UC_VIEW_PRI : <<include>>
UC_PERSONAL ..> UC_PRI_FLOW : <<include>>

UC_TIME ..> UC_SET_POINTS : <<include>>
UC_TIME ..> UC_ESTIMATE : <<include>>

UC_DELIV ..> UC_CHANGE_STATUS : <<include>>
UC_DELIV ..> UC_ACTIVITY : <<include>>

' --- Actor → main use cases ---
Freelancer --> UC_CLIENTS
Freelancer --> UC_PERSONAL
Freelancer --> UC_TIME
Freelancer --> UC_DELIV

@enduml